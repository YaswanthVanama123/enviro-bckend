# Environment Variables for EnviroMaster Backend
# Copy this file to .env and fill in your actual values

# ================================
# MongoDB Configuration
# ================================
MONGODB_URI=mongodb://localhost:27017/enviromaster
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/enviromaster

# ================================
# LaTeX PDF Service
# ================================
PDF_REMOTE_BASE=http://localhost:3001
PDF_REMOTE_TIMEOUT_MS=30000
PDF_TEMPLATE_PATH=./templates
PDF_HEADER_TEMPLATE_PATH=./templates/customer-header.tex

