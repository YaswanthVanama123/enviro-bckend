# Environment Variables for EnviroMaster Backend
# Copy this file to .env and fill in your actual values

# ================================
# MongoDB Configuration
# ================================
MONGODB_URI=mongodb://localhost:27017/enviromaster
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/enviromaster

# ================================
# LaTeX PDF Service
# ================================
PDF_REMOTE_BASE=http://localhost:3001
PDF_REMOTE_TIMEOUT_MS=30000
PDF_TEMPLATE_PATH=./templates
PDF_HEADER_TEMPLATE_PATH=./templates/customer-header.tex

# ================================
# Zoho Integration (Required for PDF uploads)
# ================================
# Get these from: https://api-console.zoho.com/

# Zoho OAuth Credentials
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here

# Zoho API URLs
ZOHO_BIGIN_API_URL=https://www.zohoapis.com/bigin/v1
ZOHO_CRM_API_URL=https://www.zohoapis.com/crm/v3

# ================================
# Server Configuration
# ================================
PORT=5000
NODE_ENV=development
# NODE_ENV=production

# ================================
# JWT/Authentication (if applicable)
# ================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ================================
# CORS Configuration
# ================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================
# Optional: Email Service (for notifications)
# ================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ================================
# Optional: AWS S3 (for external PDF storage)
# ================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=enviromaster-pdfs
# AWS_REGION=us-east-1

# ================================
# Optional: Redis (for caching)
# ================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# ================================
# Logging
# ================================
LOG_LEVEL=info
# LOG_LEVEL=debug (for development)
